<h1>Sign up</h1>

<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
<% end %>

<%= form_for(@user, url: users_path) do |f| %>
  <%= f.label :username %><br>
  <%= f.text_field :username %>
  <br>
  <%= f.label :password %><br>
  <%= f.password_field :password %>
  <br>
  <%= f.submit %>
<% end %>